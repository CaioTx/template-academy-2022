
<div id="movies" class="d-flex mb-5 justify-content-between">
  <h3> Filmes </h3>
     <div>
    <nav class="nav nav-pills ">
    <a class="nav-item">
   <%= link_to '/movies/new',class: "nav-link text-white bg-danger #{'active' if controller_name == 'movies'}" do %>
        + Novo
      <% end %> 
      </div>
  </div>
  <table class="table">
  <thead>
   <tr>
    <th class="col-md-3" scope="col">Título</th>
    <th class="col-md-3" scope="col">Diretor</th>
    <th class="col-md-3" scope="col">Gênero</th>
    <th class="col-md-3" scope="col">Estreia</th>
    <th class="col-md-3" scope="col">Açoes</th>
  </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <%= render movie %>
    <% end %>
  </tbody>
  </table>