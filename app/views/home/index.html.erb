
<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col-md-6 mainCard">
     <%= image_tag @movies[0].cover_url, class: "img-fluid" %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <div class="card-title" >
        <strong class="d-block">
        <h3><%= @movies[0].title %></h3>
        <br>
        </strong>
      </div>
      <p class="card-text"><b>Diretor:</b> <span><%= @movies[0].director[:name]%></span></p>
      <p class="card-text"><b>Estreia:</b> <span><%= formatar_data_estreia(@movies[0].published_at)%></span></p>
      <p class="card-text"><b>Gênero:</b> <span><%= @movies[0].movie_genre[:name]%></span></p>
      <p class="card-text"><b>Elenco:</b> <span><%= @movies[0].artists.collect { |a| a.name }.first(5).join(' - ')%></span></p>
      <p class="card-text text-wrap text-truncate"></p><b>Sinopse:</b> <span><%= @movies[0].sinopse%></span></p>
     </div>
    </div>
  </div>
</div>

