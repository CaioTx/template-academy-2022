
<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div style="color: red">
    <h2>Foi encontrado <%=artist.errors.count%> erro:</h2>

      <ul>
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
 <div class='form-group'>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control field" %>
  </div>
<br>

<div class="d-flex flex-row-reverse mb-5 justify-content">
  <div>
    <%= form.submit "Salvar", class: 'btn btn-danger'%>
    </div>
   <div>
  <nav class="nav nav-pills ">
    <a class="nav-item">
      <%= link_to '/artists', style:"background-color: #C0C0C0", class: "nav-link text-black  #{'active' if controller_name == 'artists'}" do %>
        Cancelar
      <% end %> 
         </div>
</div>
</form>

<% end %>