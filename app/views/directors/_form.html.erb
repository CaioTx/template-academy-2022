
<%= form_with(model: director) do |form| %>
  <% if director.errors.any? %>
    <div style="color: red">
    <h2>Foi encontrado <%=director.errors.count%> erro:</h2>

      <ul>
        <% director.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
 <div class='form-group'>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control field" %>

  </div>
  <br>
<div class="d-flex flex-row-reverse mb-5 justify-content">
  <div>
    <%= form.submit "Salvar", class: 'btn btn-danger'%>
    </div>

   <div>
  <nav class="nav nav-pills ">
    <a class="nav-item">
      <%= link_to '/directors', style:"background-color: #C0C0C0", class: "nav-link text-black  #{'active' if controller_name == 'directors'}" do %>
        Cancelar
      <% end %>
         </div>
</div>
</form>


<% end %>

